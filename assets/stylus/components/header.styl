.header
	
	height 150px
	box-shadow 0px 0.1em 0.4em rgba(74, 74, 74, 0.3)
	
	.container
		display flex
		height 100%
		justify-content space-between
		align-items flex-end
	
	&_logo
		height 150px
		img
			height 100%
			
	&_icon
		margin-left -80px
		width 350px
		img
			width 100%
	&_menu
		display flex
		justify-content center
	
	&_info
		display flex
		justify-content space-between
		
	&_phone
		color darken($grey, 30%)
		span:nth-child(2)
			margin-left 5px
			font-size 1.8em
	
	&_lang
		display flex
		
		div
			text-align center
			margin-left 5px
			border-radius 50%
			width 40px
			height 40px
			font-size 14px
			cursor pointer
			&:first-child
				background-color darken($green, 10%)
				color white
			span
				padding 8px
				display block

.menu
	
	&_list, &_sub
		list-style none
		padding 0
		margin 0
		display flex
		
		a
			padding 20px
			display block
			font-weight 400
			font-size 1em
			
	&_list
		justify-content center
		
		li
			position relative
			transition color 250ms ease-in-out
			
			&:hover
				color darken($green, 10%)
				
	&_list li:hover &_sub
		opacity 1
		z-index 10
		transform translateY(0px)
		visibility visible
		background-color #333

	&_sub
		position absolute
		color white
		flex-direction column
		font-size .8em
		width 200px
		opacity 0
		transform translateY(-10px)
		visibility hidden
		transition transform 250ms, opacity 200ms, visibility 200ms, background-color 200ms
		background-color transparent
		z-index -10
		
		li
			transition background-color 200ms ease-in-out
			
			&:hover
				background-color $green !important
				
.collage
	text-align center
	img 
		width 70%
		z-index -20
		position relative